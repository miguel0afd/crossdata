<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.stratio.crossdata</groupId>
        <artifactId>parent_2.10</artifactId>
        <version>1.3.0</version>
    </parent>

    <artifactId>dist_2.10</artifactId>
    <name>Dist</name>
    <version>1.3.0</version>

    <profiles>
        <profile>
            <id>package</id>
            <dependencies>
                <dependency>
                    <groupId>com.stratio.crossdata</groupId>
                    <artifactId>crossdata-driver_${scala.binary.version}</artifactId>
                    <version>${project.parent.version}</version>
                    <classifier>jar-with-dependencies</classifier>
                </dependency>
                <dependency>
                    <groupId>com.stratio.crossdata</groupId>
                    <artifactId>crossdata-server_${scala.binary.version}</artifactId>
                    <version>${project.parent.version}</version>
                    <classifier>jar-with-dependencies</classifier>
                </dependency>
                <dependency>
                    <groupId>com.stratio.crossdata</groupId>
                    <artifactId>crossdata-streaming_${scala.binary.version}</artifactId>
                    <version>${project.parent.version}</version>
                    <classifier>jar-with-dependencies</classifier>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <version>1.10</version>
                        <executions>
                            <execution>
                                <id>parse-scala-version</id>
                                <goals>
                                    <goal>regex-property</goal>
                                </goals>
                                <configuration>
                                    <name>scala.binary.package.version</name>
                                    <value>${scala.binary.version}</value>
                                    <regex>(.*)[\._](.*)</regex>
                                    <replacement>$1$2</replacement>
                                    <failIfNoMatch>true</failIfNoMatch>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>appassembler-maven-plugin</artifactId>
                        <version>1.10</version>
                        <configuration>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                            <binFileExtensions>
                                <unix>.sh</unix>
                            </binFileExtensions>
                            <configurationSourceDirectory>src/main/resources</configurationSourceDirectory>
                            <configurationDirectory>:/etc/sds/crossdata</configurationDirectory>
                            <copyConfigurationDirectory>true</copyConfigurationDirectory>
                            <includeConfigurationDirectoryInClasspath>true</includeConfigurationDirectoryInClasspath>
                            <filterConfigurationDirectory>true</filterConfigurationDirectory>
                            <assembleDirectory>${project.build.directory}/crossdata-dist-${project.parent.version}</assembleDirectory>
                            <extraJvmArguments>$CROSSDATA_JAVA_OPTS</extraJvmArguments>
                            <licenseHeaderFile>src/main/include/LICENSE</licenseHeaderFile>
                            <binFolder>bin</binFolder>
                            <repositoryName>lib</repositoryName>
                            <unixScriptTemplate>${project.basedir}/src/main/templates/server-script.sh</unixScriptTemplate>
                            <programs>
                                <program>
                                    <mainClass>com.stratio.crossdata.server.CrossdataApplication</mainClass>
                                    <name>server</name>
                                </program>
                            </programs>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>assemble</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>com.stratio.mojo.unix</groupId>
                        <artifactId>unix-maven-plugin</artifactId>
                        <version>1.2.0</version>
                        <extensions>true</extensions>
                        <inherited>false</inherited>
                        <configuration>
                            <outputFileName>stratio-crossdata-scala${scala.binary.package.version}</outputFileName>
                            <contact>
                                <![CDATA[Stratio Crossdata<crossdata@stratio.com>]]>
                            </contact>
                            <contactEmail>crossdata@stratio.com</contactEmail>
                            <deb>
                                <section>devel</section>
                                <depends>lockfile-progs</depends>
                            </deb>
                            <rpm>
                                <group>devel</group>
                                <requires>bash</requires>
                            </rpm>
                            <excludeDirectoryAttributes>
                                <dir>/etc</dir>
                                <dir>/etc/default</dir>
                                <dir>/etc/init.d</dir>
                                <dir>/var</dir>
                                <dir>/var/run</dir>
                                <dir>/var/log</dir>
                                <dir>/opt</dir>
                            </excludeDirectoryAttributes>
                            <defaults>
                                <directoryAttributes>
                                    <user>crossdata</user>
                                    <group>stratio</group>
                                    <mode>0775</mode>
                                </directoryAttributes>
                                <fileAttributes>
                                    <user>crossdata</user>
                                    <group>stratio</group>
                                    <mode>0664</mode>
                                </fileAttributes>
                            </defaults>
                            <assembly>
                                <mkdirs>
                                    <path>/etc/sds</path>
                                    <attributes>
                                        <user>root</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/log/sds</path>
                                    <attributes>
                                        <user>root</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/log/sds/crossdata</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/run/sds</path>
                                    <attributes>
                                        <user>root</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/sds/crossdata</path>
                                    <attributes>
                                        <user>crossdata</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>
                                <mkdirs>
                                    <path>/opt/sds</path>
                                    <attributes>
                                        <user>root</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>

                                <copyDirectory>
                                    <from>
                                        ${project.build.directory}/crossdata-dist-${project.parent.version}/lib/com/stratio/crossdata/crossdata-server_${scala.binary.version}/${project.parent.version}
                                    </from>
                                    <to>/opt/sds/crossdata/lib</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>
                                        ${project.build.directory}/crossdata-dist-${project.parent.version}/lib/com/stratio/crossdata/crossdata-driver_${scala.binary.version}/${project.parent.version}
                                    </from>
                                    <to>/opt/sds/crossdata/lib</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>
                                        ${project.build.directory}/crossdata-dist-${project.parent.version}/lib/com/stratio/crossdata/crossdata-streaming_${scala.binary.version}/${project.parent.version}
                                    </from>
                                    <to>/opt/sds/crossdata/appjar</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>../driver/target/${scala.binary.version}/crossdata-shell-${project.parent.version}/bin</from>
                                    <to>/opt/sds/crossdata/bin</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>
                                        ${project.build.directory}/crossdata-dist-${project.parent.version}/:/etc/sds/crossdata/shell
                                    </from>
                                    <to>/etc/sds/crossdata/shell</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>
                                        ${project.build.directory}/crossdata-dist-${project.parent.version}/:/etc/sds/crossdata/server
                                    </from>
                                    <to>/etc/sds/crossdata/server</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>${project.build.directory}/crossdata-dist-${project.parent.version}/bin</from>
                                    <to>/opt/sds/crossdata/bin</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>src/main/unix/files_and_dirs/bin</from>
                                    <to>/opt/sds/crossdata/bin</to>
                                </copyDirectory>

                            </assembly>
                        </configuration>
                        <executions>
                            <execution>
                                <id>deb</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-deb</goal>
                                </goals>
                                <configuration>
                                    <architecture>all</architecture>
                                    <assembly>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/default/crossdata-driver-variables
                                            </path>
                                            <toFile>/etc/default/crossdata-driver-variables</toFile>
                                            <attributes>
                                                <user>crossdata</user>
                                                <group>stratio</group>
                                            </attributes>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/default/crossdata-variables</path>
                                            <toFile>/etc/default/crossdata-variables</toFile>
                                            <attributes>
                                                <user>crossdata</user>
                                                <group>stratio</group>
                                            </attributes>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/init.d/deb/crossdata</path>
                                            <toFile>/etc/init.d/crossdata</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                            </attributes>
                                        </copyFile>
                                    </assembly>
                                </configuration>
                            </execution>
                            <execution>
                                <id>rpm</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-rpm</goal>
                                </goals>
                                <configuration>
                                    <architecture>noarch</architecture>
                                    <assembly>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/default/crossdata-variables</path>
                                            <toFile>/etc/default/crossdata-variables</toFile>
                                            <attributes>
                                                <user>crossdata</user>
                                                <group>stratio</group>
                                            </attributes>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/init.d/rpm/crossdata</path>
                                            <toFile>/etc/init.d/crossdata</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                            </attributes>
                                        </copyFile>
                                    </assembly>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
